@model IEnumerable<AmbulancePCR.Models.PCRListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Patient Care Reports</h2>

<p>
    <a href="~/PCR/Create" class="btn btn-primary btn-lg">Create &raquo;</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryCareProvider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IncidentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IncidentNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryCareProvider)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IncidentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IncidentNumber)
        </td>
        <td>
            <p class="tableAction">
            @Html.ActionLink("Edit", "Edit", new { id=item.PatientCareReportId }) |
            @Html.ActionLink("Details", "Details", new { id = item.PatientCareReportId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PatientCareReportId })
            </p>
        </td>
    </tr>
}

</table>

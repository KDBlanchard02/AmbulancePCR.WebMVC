@model IEnumerable<AmbulancePCR.Models.QAIssueListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Issues</h2>

<p class="action">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IncidentNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsResolved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupervisorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IncidentNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsResolved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SupervisorName)
        </td>
        <td>
            <p class="tableAction">
                @Html.ActionLink("Edit", "Edit", new { id = item.IssueID }) |
                @Html.ActionLink("Details", "Details", new { id = item.IssueID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IssueID })
            </p>
        </td>
    </tr>
}

</table>
